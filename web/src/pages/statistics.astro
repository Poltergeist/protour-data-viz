---
import Layout from '../layouts/Layout.astro';
import WinRateChart from '../components/WinRateChart';
import MatchupTable from '../components/MatchupTable';
import statsData from '../../../data/tournament-394299-stats.json';

const stats = statsData.archetypes;
---

<Layout title="Statistics - Pro Tour Lorwyn Eclipsed">
  <div class="stats-page">
    <h2>Tournament Statistics</h2>
    <p class="subtitle">Aggregated data from Rounds 4-8 (Standard Format)</p>
    
    <section class="chart-section">
      <WinRateChart client:only="react" stats={stats} minGames={5} />
    </section>

    <section class="table-section">
      <MatchupTable client:only="react" stats={stats} topN={15} />
    </section>

    <section class="data-notes">
      <h3>Data Notes</h3>
      <ul>
        <li>Win rates calculated from {Object.keys(stats).length} different archetypes</li>
        <li>Minimum 5 games required for win rate chart</li>
        <li>Matchup percentages based on head-to-head results</li>
        <li>Colors indicate matchup favorability (Green = 60%+, Red = 40%-)</li>
      </ul>
    </section>
  </div>
</Layout>

<style>
  .stats-page {
    max-width: 1400px;
    margin: 0 auto;
  }

  h2 {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
  }

  .subtitle {
    font-size: 1rem;
    color: var(--text-secondary);
    margin-bottom: 3rem;
  }

  .chart-section,
  .table-section {
    background: var(--bg-secondary);
    border: 1px solid var(--grey-border);
    border-radius: 4px;
    padding: 2rem;
    margin-bottom: 2rem;
  }

  .chart-section :global(.chart-container h3),
  .table-section :global(.matchup-table-container h3) {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--text-primary);
  }

  .table-section :global(.table-hint) {
    font-size: 0.875rem;
    color: var(--text-muted);
    margin-bottom: 1.5rem;
  }

  .table-section :global(.table-wrapper) {
    overflow-x: auto;
  }

  .table-section :global(.matchup-table) {
    width: 100%;
    border-collapse: collapse;
    font-size: 0.875rem;
  }

  .table-section :global(.matchup-table th) {
    background: var(--bg-tertiary);
    padding: 0.75rem 0.5rem;
    text-align: left;
    border: 1px solid var(--grey-border);
    font-weight: 600;
    color: var(--text-secondary);
  }

  .table-section :global(.archetype-header) {
    min-width: 180px;
    position: sticky;
    left: 0;
    z-index: 2;
    background: var(--bg-tertiary);
  }

  .table-section :global(.record-header) {
    min-width: 120px;
    position: sticky;
    left: 180px;
    z-index: 2;
    background: var(--bg-tertiary);
  }

  .table-section :global(.opponent-header) {
    width: 50px;
    padding: 0.5rem 0.25rem;
    text-align: center;
  }

  .table-section :global(.vertical-text) {
    writing-mode: vertical-rl;
    transform: rotate(180deg);
    white-space: nowrap;
    font-size: 0.75rem;
    display: inline-block;
    max-height: 150px;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .table-section :global(.matchup-table td) {
    padding: 0.75rem 0.5rem;
    border: 1px solid var(--grey-border);
  }

  .table-section :global(.matchup-table tbody tr) {
    cursor: pointer;
    transition: background-color 0.2s;
  }

  .table-section :global(.matchup-table tbody tr:hover) {
    background: rgba(255, 96, 0, 0.1);
  }

  .table-section :global(.matchup-table tbody tr.selected) {
    background: rgba(255, 96, 0, 0.15);
    border-left: 3px solid var(--primary-color);
  }

  .table-section :global(.archetype-cell) {
    font-weight: 600;
    position: sticky;
    left: 0;
    background: var(--bg-secondary);
    z-index: 1;
  }

  .table-section :global(.record-cell) {
    position: sticky;
    left: 180px;
    background: var(--bg-secondary);
    z-index: 1;
  }

  .table-section :global(.winrate) {
    color: var(--text-muted);
    font-size: 0.8rem;
  }

  .table-section :global(.matchup-cell) {
    text-align: center;
    font-weight: 600;
    transition: transform 0.1s;
  }

  .table-section :global(.matchup-cell:hover) {
    transform: scale(1.1);
    z-index: 3;
    border: 2px solid var(--primary-color);
  }

  .table-section :global(.matchup-details) {
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid var(--grey-border);
  }

  .table-section :global(.matchup-details h4) {
    font-size: 1.125rem;
    margin-bottom: 1rem;
    color: var(--primary-color);
  }

  .table-section :global(.matchup-list) {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 0.75rem;
  }

  .table-section :global(.matchup-item) {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 1rem;
    background: var(--bg-tertiary);
    border-radius: 4px;
    border: 1px solid var(--grey-border);
  }

  .table-section :global(.matchup-opponent) {
    flex: 1;
    font-weight: 500;
  }

  .table-section :global(.matchup-record) {
    margin: 0 1rem;
    color: var(--text-secondary);
  }

  .table-section :global(.matchup-percentage) {
    font-weight: 700;
    min-width: 50px;
    text-align: right;
  }

  .data-notes {
    background: var(--bg-secondary);
    border: 1px solid var(--grey-border);
    border-radius: 4px;
    padding: 1.5rem;
  }

  .data-notes h3 {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--text-primary);
  }

  .data-notes ul {
    list-style-position: inside;
    color: var(--text-secondary);
    line-height: 1.8;
  }

  .data-notes li {
    margin-bottom: 0.5rem;
  }
</style>
