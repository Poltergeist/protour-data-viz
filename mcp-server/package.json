{
  "name": "@protour/mcp-server",
  "version": "0.1.0",
  "description": "MCP server and REST API for ProTour tournament data",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:ngrok": "echo 'Run: npm run dev (in one terminal) && ngrok http 3000 (in another terminal)'",
    "mcp": "tsx src/mcp-server.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test:mcp": "curl http://localhost:3000/health",
    "test:queries": "tsx src/test-queries.ts",
    "test:phase2": "tsx src/test-phase2.ts"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "pokemon",
    "tcg",
    "tournament",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.1.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
