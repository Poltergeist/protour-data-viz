{
  "openapi": "3.1.0",
  "info": {
    "title": "ProTour Data API",
    "version": "0.1.0",
    "description": "REST API for querying Pok√©mon TCG ProTour tournament data including matches, deck lists, and statistics.",
    "contact": {
      "name": "API Support"
    },
    "x-privacy-policy-url": "https://github.com/sp3c1/protour-data-viz#privacy"
  },
  "servers": [
    {
      "url": "http://localhost:3000/api",
      "description": "Local development server"
    }
  ],
  "paths": {
    "/matches": {
      "get": {
        "summary": "Query tournament matches",
        "description": "Query matches by round, player name, or archetype",
        "operationId": "queryMatches",
        "parameters": [
          {
            "name": "round",
            "in": "query",
            "description": "Round number (1-20)",
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 20
            }
          },
          {
            "name": "player",
            "in": "query",
            "description": "Player name (partial match supported)",
            "schema": {
              "type": "string",
              "maxLength": 100
            }
          },
          {
            "name": "archetype",
            "in": "query",
            "description": "Deck archetype (partial match supported)",
            "schema": {
              "type": "string",
              "maxLength": 100
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Maximum number of results",
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 1000,
              "default": 100
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MatchesResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid parameters",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/decks": {
      "get": {
        "summary": "Query deck lists",
        "description": "Query complete deck lists by player or archetype",
        "operationId": "queryDecks",
        "parameters": [
          {
            "name": "player",
            "in": "query",
            "description": "Player name (partial match supported)",
            "schema": {
              "type": "string",
              "maxLength": 100
            }
          },
          {
            "name": "archetype",
            "in": "query",
            "description": "Deck archetype (partial match supported)",
            "schema": {
              "type": "string",
              "maxLength": 100
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Maximum number of results",
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 1000,
              "default": 100
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DecksResponse"
                }
              }
            }
          }
        }
      }
    },
    "/stats": {
      "get": {
        "summary": "Get archetype statistics",
        "description": "Retrieve archetype win rates and matchup data",
        "operationId": "queryStats",
        "parameters": [
          {
            "name": "archetype",
            "in": "query",
            "description": "Specific archetype name (returns all if omitted)",
            "schema": {
              "type": "string",
              "maxLength": 100
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/StatsResponse"
                }
              }
            }
          },
          "404": {
            "description": "Archetype not found"
          }
        }
      }
    },
    "/players/{player}/deck": {
      "get": {
        "summary": "Get player's deck and performance",
        "description": "Get complete information for a specific player",
        "operationId": "queryPlayerDeck",
        "parameters": [
          {
            "name": "player",
            "in": "path",
            "required": true,
            "description": "Player name (exact or partial match)",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PlayerDeckResponse"
                }
              }
            }
          },
          "404": {
            "description": "Player not found"
          }
        }
      }
    },
    "/archetypes": {
      "get": {
        "summary": "List all archetypes",
        "description": "Get list of all deck archetypes with statistics",
        "operationId": "listArchetypes",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ArchetypesResponse"
                }
              }
            }
          }
        }
      }
    },
    "/tournament": {
      "get": {
        "summary": "Get tournament information",
        "description": "Get tournament metadata and summary statistics",
        "operationId": "getTournamentInfo",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TournamentInfoResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "MatchesResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "count": {
            "type": "integer",
            "example": 10
          },
          "data": {
            "type": "array",
            "items": {
              "type": "object"
            }
          }
        }
      },
      "DecksResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "count": {
            "type": "integer",
            "example": 5
          },
          "data": {
            "type": "array",
            "items": {
              "type": "object"
            }
          }
        }
      },
      "StatsResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "data": {
            "type": "object"
          }
        }
      },
      "PlayerDeckResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "data": {
            "type": "object"
          }
        }
      },
      "ArchetypesResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "count": {
            "type": "integer",
            "example": 43
          },
          "data": {
            "type": "array",
            "items": {
              "type": "object"
            }
          }
        }
      },
      "TournamentInfoResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "data": {
            "type": "object"
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": false
          },
          "error": {
            "type": "string",
            "example": "Invalid request"
          }
        }
      }
    }
  }
}
